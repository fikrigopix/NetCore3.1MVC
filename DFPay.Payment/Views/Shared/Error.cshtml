@{
    ViewData["Title"] = "Error";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Error @ViewBag.ErrorCode</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="container-fluid">
        <!-- Main content -->
        <section class="content">
            <div class="error-page">
                <h2 class="headline text-warning"> @ViewBag.ErrorCode</h2>

                <div class="error-content">
                    <hr />
                    <h3><i class="fas fa-exclamation-triangle text-warning"></i> @ViewBag.ErrorMessage</h3>

                    <p>
                        We could not find the page you were looking for.
                    </p>
                </div>
                <!-- /.error-content -->
            </div>
            <!-- /.error-page -->
        </section>
    </div>
</div>