@page
@model LoginModel
@{
ViewData["Title"] = Localizer["Log In"]; }

<div class="login-box">
    <div class="login-logo">
        <b>DF</b>Pay
    </div>
    <div class="card">
        <div class="card-header">
                @await Html.PartialAsync("_SelectLanguageIdentity")
        </div>
        <div class="card-body login-card-body">
            <p class="login-box-msg">@Localizer["Sign in to start your session"]</p>
            <form id="account" method="post">
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                <div class="input-group mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="Email" placeholder=@Localizer["Email"] />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                <div class="input-group mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="Password" placeholder=@Localizer["Password"] />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe">
                                @Localizer["Remember Me"]
                            </label>
                        </div>
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-sm btn-block">@Localizer["Sign In"]</button>
                    </div>
                </div>
            </form>
            <a asp-page="./ForgotPassword">@Localizer["I forgot my password"]</a>
        </div>
    </div>
</div>