<!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>

        @if (User.Identity.IsAuthenticated)
        {
            @*<div class="col-6">
                @await Html.PartialAsync("_SelectLanguagePartial")
            </div>*@
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    @await Html.PartialAsync("_SelectLanguagePartial")
                </li>
                <!-- Notifications Dropdown Menu -->
                <li class="nav-item dropdown" id="invoiceNotificationBell">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-bell"></i>
                        <span class="badge badge-warning navbar-badge push_notif_payment"></span>
                    </a>
                    <div id="badge_bell_dropdown" class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <div class="dropdown-divider"></div>
                        <a id="notificationLink"
                           asp-controller="Invoice"
                           asp-action="Index"
                           asp-route-startDate="@(new DateTime(1970, 1, 1))"
                           asp-route-endDate="@DateTime.Now"
                           asp-route-unread="@true"
                           class="dropdown-item">
                            <i class="fas fa-credit-card mr-2"></i>
                            <span class="push_notif_payment"></span>
                            <span id="push_notif_text"></span>
                        </a>
                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-user"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        @*<span class="dropdown-header" style="cursor:default;">@Localizer["Welcome"] Tester</span>*@
                        <span class="dropdown-header" style="cursor:default;">@Localizer["Welcome"]</span>
                        <div class="dropdown-divider"></div>
                        <a asp-controller="Account" asp-action="Index" class="dropdown-item">
                            <i class="far fa-user mr-2"></i> @Localizer["User Account"]
                        </a>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-cog mr-2"></i> @Localizer["Settings"]
                        </a>
                        <div class="dropdown-divider"></div>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="dropdown-item"><i class="fas fa-power-off mr-3"></i>@Localizer["Logout"]</button>
                        </form>
                    </div>
                </li>
            </ul>
        }
    </nav>
<!-- /.navbar -->
<script type="text/javascript">
    isInvoiceNotificationBellAuthorized > 0 ? $("#invoiceNotificationBell").show() : $("#invoiceNotificationBell").hide();
</script>